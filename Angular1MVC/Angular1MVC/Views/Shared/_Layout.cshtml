<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/notification-rg.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="mvcapp">
   
    <div class="" ng-controller="rootController">
        @RenderBody()
        <hr />
        <footer style="position:absolute;width:100%">
            <div style="text-align:center;width:100%"><p>&copy; @DateTime.Now.Year -Shopping deal</p></div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/angular-file-upload.js"></script>
    <script src="~/Scripts/angular-cookies.js"></script>
    <script src="~/Scripts/ngStorage.js"></script>
    <script src="~/Scripts/angular-validator.js"></script>

    <script src="~/Scripts/notification-rg.js" type="text/javascript"></script>

    <script src="~/app/app.js"></script>
    <script src="~/app/services/authService.js"></script>
    <script src="~/app/services/notifyService.js"></script>
    <script src="~/app/factory/DbFactory.js"></script>
    <script src="~/app/controllers/rootController.js"></script>
    <script src="~/app/controllers/aboutController.js"></script>
    <script src="~/app/controllers/homeController.js"></script>
    <script src="~/app/controllers/loginController.js"></script>
    <script src="~/app/directives/app.load.directives.js"></script>
    <script src="~/app/controllers/registerController.js"></script>

</body>
</html>
